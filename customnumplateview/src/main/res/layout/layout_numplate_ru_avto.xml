<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="226px"
    android:minHeight="52px"
    tools:background="#0000ff">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="H,226:52">

        <android.support.percent.PercentRelativeLayout
            android:id="@+id/alPlate"
            android:layout_centerInParent="true"
            android:layout_width="226px"
            android:layout_height="52px"
            tools:background="@drawable/auto_number">

            <EditText
                android:id="@+id/tvNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_gravity="center_vertical|left"
                android:textSize="38px"
                app:layout_marginLeftPercent="10%"
                app:layout_marginTopPercent="0%"
                app:layout_aspectRatio="10%"
                tools:text="c 000 cc"/>

            <EditText
                android:id="@+id/tvRegion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textSize="24px"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                app:layout_marginRightPercent="7%"
                app:layout_marginTopPercent="5%"
                app:layout_aspectRatio="10%"
                tools:text="CC"/>

            <EditText
                android:id="@+id/tvMotoSuffix"
                android:layout_width="0px"
                android:layout_height="0px"
                android:background="@null"
                android:textSize="0px"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                app:layout_marginRightPercent="7%"
                app:layout_marginTopPercent="5%"
                app:layout_aspectRatio="10%"
                tools:text="CC"/>

        </android.support.percent.PercentRelativeLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>